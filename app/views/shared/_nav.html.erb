<nav class="navbar is-white" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">

    <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <%= link_to "Home", root_path, class: 'navbar-item'%>
      <a class="navbar-item">
        Contact Admin
      </a>
    </div>
     <% if user_signed_in?%>
      <div class="navbar-item has-dropdown is-hoverable">
        <figure class="image is-48x48  navbar-item">
          <%= image_tag avatar_url(current_user), class: "is-rounded"%>
        </figure>
        <a class="navbar-link">
          <%if current_user.name.nil? %>
          <%= current_user.email%>
          <%else%>
          <%= current_user.name%>
          <%end%>
        </a>

        <div class="navbar-dropdown">
          <%= link_to "Profile", edit_user_registration_path, class: "navbar-item" %>
          <hr class="navbar-divider">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "navbar-item" %>
        </div>
      </div>
      <%else%>
      <div class="navbar-item">
        <div class="buttons">
          <%= link_to "Sign Up", new_user_registration_path, class: "button is-warning" %>
          <%= link_to "Log In", new_user_session_path, class: "button is-light" %>
        </div>
      </div>
      <%end%>

   </div>
  </div>
</nav>

<script>
  $(document).ready(function() {

  // Check for click events on the navbar burger icon
  $(".navbar-burger").click(function() {

      // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
      $(".navbar-burger").toggleClass("is-active");
      $(".navbar-menu").toggleClass("is-active");

  });
});
</script>
