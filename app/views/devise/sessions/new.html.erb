<section class="hero">
  <div class="hero-body">
    <div class="container ">
      <div class="columns is-centered">
        <div class="column is-6-table is-6-desktop is-6-widescreen">
          <div class="box ">
            <div class="field has-text-centered ">
              <label for="" class="title"><h2>Log in</h2></label>
            </div>
            <hr class="is-dark">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :Email, class: 'label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
            </div>

            <div class="field">
              <%= f.label :Password, class: 'label' %>
              <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
            </div>

            <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class: 'button is-primary' %>
               <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: 'button is-link' %>
            </div>
            <% end %>
            <hr >
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>







