<section class="hero">
  <div class="hero-body">
    <div class="container ">
      <div class="columns is-centered">
        <div class="column is-6-table is-6-desktop is-6-widescreen">
          <div class="box ">
            <div class="field has-text-centered ">
              <label for="" class="title"><h2>Change your password</h2></label>
            </div>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <%= f.label :password, "New password", class: 'label' %><br />
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'input' %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "Confirm new password", class: 'label' %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input' %>
            </div>

            <div class="actions">
              <%= f.submit "Change my password", class: 'button is-primary' %>
            </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>






